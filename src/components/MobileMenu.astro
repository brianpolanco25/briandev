<!-- MDI Icons -->
<link
  rel="stylesheet"
  href="https://cdn.materialdesignicons.com/6.5.95/css/materialdesignicons.min.css"
/>

<!-- Container -->
<div
  class="px-5 pt-3 bg-white shadow-lg rounded-t-lg lg:hidden fixed bottom-0 left-0 w-full"
>
  <div class="flex flex-row space-x-3 justify-center">
    <!-- Item #1 -->
    <div class="flex group">
      <a href="#" class="p-3 text-gray-400 hover:text-[#0ea5e9]">
        <span class="flex flex-col items-center">
          <!-- Icon -->
          <i
            class="mdi mdi-home-outline mdi-24px mx-1 text-gray-500 group-hover:text-gray-700
                                transition-color duration-200"
          ></i>

          <!-- Text -->
          <span class="text-xs mb-2 transition-all duration-200"> Inicio</span>

          <!-- Focus Dot -->
          <span
            class="h-2 w-2 rounded-full group-hover:bg-[#0ea5e9]
                                transition-all duration-150 delay-100"
          ></span>
        </span>
      </a>
    </div>

    <!-- Item #2 -->
    <div class="flex group">
      <a href="#" class="p-3 text-gray-400 hover:text-[#0ea5e9]">
        <span class="flex flex-col items-center">
          <!-- Icon -->
          <i
            class="mdi mdi-briefcase-outline mdi-24px mx-1 text-gray-500 group-hover:text-gray-700
                                transition-color duration-200"
          ></i>

          <!-- Text -->
          <span class="text-xs mb-2 transition-all duration-200">
            Proyectos</span
          >

          <!-- Focus Dot -->
          <span
            class="h-2 w-2 rounded-full group-hover:bg-[#0ea5e9]
                                transition-all duration-150 delay-100"
          ></span>
        </span>
      </a>
    </div>

    <!-- Item #3 Active -->
    <div class="flex group">
      <a href="#" class="p-3 text-[#0ea5e9] hover:text-[#0ea5e9]">
        <span class="flex flex-col items-center">
          <!-- Icon -->
          <i
            class="mdi mdi-account-circle-outline mdi-24px mx-1 text-gray-700 group-hover:text-gray-700
                                transition-color duration-200"
          ></i>

          <!-- Text -->
          <span class="text-xs mb-2 transition-all duration-200">
            Sobre m√≠</span
          >

          <!-- Focus Dot -->
          <span
            class="h-1 w-5 rounded-full bg-[#0ea5e9] group-hover:bg-[#0ea5e9]
                                hover:h-3 hover:w-3 transition-all duration-150 delay-100"
          ></span>
        </span>
      </a>
    </div>

    <!-- Item #4 -->
    <div class="flex group">
      <a href="#" class="p-3 text-gray-400 hover:text-[#0ea5e9]">
        <span class="flex flex-col items-center">
          <!-- Icon -->
          <i
            class="mdi mdi-email-outline mdi-24px mx-1 text-gray-500 group-hover:text-gray-700
                                transition-color duration-200"
          ></i>

          <!-- Text -->
          <span class="text-xs mb-2 transition-all duration-200">
            Contacto</span
          >

          <!-- Focus Dot -->
          <span
            class="h-2 w-2 rounded-full group-hover:bg-[#0ea5e9]
                                transition-all duration-150 delay-100"
          ></span>
        </span>
      </a>
    </div>
  </div>
</div>
