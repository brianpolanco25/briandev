---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: string;
}

const { title, description, image, tags, link } = Astro.props;
---

<!-- component -->
<div class="flex flex-col justify-center">
  <div
    class="relative flex flex-col md:flex-row md:space-x-5 space-y-3 md:space-y-0 rounded-xl shadow-lg p-3 md:max-w-5xl mx-auto border border-gray-800 bg-gray-800"
  >
    <div class="w-full md:w-1/3 bg-gray-800 grid place-items-center">
      <img src={image} alt="tailwind logo" class="rounded-xl" />
    </div>
    <div class="w-full md:w-2/3 bg-gray-800 flex flex-col space-y-2 p-3">
      <h3 class="font-black text-white md:text-3xl text-xl">{title}</h3>
      <p class="md:text-lg text-gray-300 text-base">
        {description}
      </p>
      <div class="flex flex-wrap">
        {
          tags.map((tag) => (
            <span class="bg-red-100 text-red-700 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full mb-2">
              {tag}
            </span>
          ))
        }
      </div>
      <a
        href={link}
        class="flex select-none items-center gap-2 rounded-lg py-3 px-6 w-[140px] text-center align-middle font-sans text-xs font-bold uppercase text-[#0ea5e9] transition-all hover:bg-[#0ea5e9]/10 active:bg-[#0ea5e9]/30 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
        type="button"
      >
        Leer m√°s
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          aria-hidden="true"
          class="h-4 w-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
